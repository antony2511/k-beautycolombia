// Prisma Schema para K-Beauty Ecommerce

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String      @id @default(cuid())
  name          String
  brand         String
  price         Float
  compareAtPrice Float?
  image         String      @db.Text
  images        Json?       // Array de URLs de imágenes
  badge         String?
  badgeType     String?
  category      String?
  description   String?     @db.Text
  benefits      Json?       // Array de strings
  ingredients   Json?       // Array de strings
  howToUse      Json?       // Array de strings
  skinType      Json?       // Array de strings
  stock         Int         @default(0)
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]
  kitItems      KitItem[]

  @@index([category])
  @@index([brand])
  @@index([isActive])
}

model Kit {
  id          String    @id @default(cuid())
  name        String
  tagline     String
  description String?   @db.Text
  image       String    @db.Text
  discount    Int?
  isActive    Boolean   @default(true)
  items       KitItem[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([isActive])
}

model KitItem {
  id        String  @id @default(cuid())
  kitId     String
  kit       Kit     @relation(fields: [kitId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  position  Int     @default(0)

  @@index([kitId])
  @@index([productId])
}

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique

  // Cliente
  customerEmail   String
  customerName    String
  customerPhone   String?
  customerDocument Json?   // {type, number}

  // Montos
  subtotal        Float
  discount        Float    @default(0)
  shipping        Float    @default(0)
  total           Float

  // Estado
  status          String   @default("pending") // pending, processing, shipped, delivered, cancelled
  paymentStatus   String   @default("pending") // pending, paid, failed, refunded
  paymentMethod   String?  // stripe, wompi, etc
  paymentId       String?

  // Dirección de envío
  shippingAddress Json     // {fullName, address, city, state, zipCode, phone, instructions}

  // Tracking
  trackingNumber  String?
  notes           String?  @db.Text
  statusHistory   Json?    // Array de {status, timestamp, notes, changedBy}

  // Items
  items           OrderItem[]

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([customerEmail])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  name        String
  price       Float
  quantity    Int
  subtotal    Float

  // Snapshot de datos del producto al momento de la compra
  image       String?
  brand       String?

  createdAt   DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model Banner {
  id          String    @id @default(cuid())
  message     String
  subMessage  String?
  type        String    @default("top_bar")  // top_bar | modal
  variant     String    @default("promo")    // promo | info | sale | warning
  image       String?   @db.Text
  link        String?
  linkText    String?
  isActive    Boolean   @default(true)
  dismissible Boolean   @default(true)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([isActive])
}

model Subscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  source      String   @default("newsletter") // newsletter | quiz | checkout
  couponSent  Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([email])
  @@index([isActive])
  @@index([createdAt])
}

model EmailSettings {
  id          String   @id @default(cuid())
  smtpHost    String
  smtpPort    Int      @default(587)
  smtpUser    String
  smtpPass    String   @db.Text
  smtpFrom    String
  smtpFromName String  @default("K-Beauty Colombia")
  isActive    Boolean  @default(false)
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id                String   @id @default(cuid())
  title             String
  slug              String   @unique
  excerpt           String   @db.Text
  content           String   @db.LongText
  coverImage        String   @db.Text
  category          String   // rutina_dia | rutina_noche | ingredientes | casos_exito | consejos
  skinType          Json?    // String[]
  brands            Json?    // String[]
  relatedProductIds Json?    // String[]
  isPublished       Boolean  @default(false)
  author            String   @default("Dra. Berenice Rodríguez")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([isPublished])
  @@index([category])
  @@index([slug])
}
